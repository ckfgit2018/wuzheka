.userWrapper{
	width: 100%;
	height: auto;
	background-color: #f5f5f5;
}
.userTop{
	width: 100%;
	height: 120rpx;
	box-sizing: border-box;
}
.userTop .avatar_wrapper{
	position: relative;
	width: 100rpx;
	height: 100rpx;
	display: inline-block;
	margin-top: 13rpx;
	margin-left: 20rpx;
	border-radius: 50%;
	background-color: #fff;
}
.avatar_wrapper .avatar_img{
	position: absolute;
	width: 90rpx;
	height: 90rpx;
	border-radius: 50%;
	top: 50%;
	left: 50%;
	transform: translate(-50%,-50%);
}
.avatar_img image{
	width: 100%;
	height: 100%;
	border-radius: 50%;
	vertical-align: top;
}
.userInfo{
	width: 80%;
	height: 100%;
	color: #fff;
	display: inline-block;
	vertical-align: top;
	padding-left: 100rpx;
	box-sizing: border-box;
}
.nickName,.userId{
	padding: 10rpx;
	height: 60rpx;
	box-sizing: border-box;
}
.userId .num{
	padding-left: 10rpx;
}
.userInfoWrapper{
	width: 100%;
	height: 120rpx;
	display: flex;
	border-bottom: 2rpx solid #E7E6E7;
}
.userInfoWrapper .userInfoItem{
	flex: 1;
	height: 100rpx;
	margin-top: 20rpx;
	border-right: 2rpx solid #E7E6E7;
}
.userInfoItem:last-child{
	border-right: none;
}
.item_value{
	font-weight: 400;
	font-size: 32rpx;
	color: rgb(109,109,109);
}
.item_desc{
	color: rgb(179,179,179);
}
.gongNeng_wrapper{
	width: 100%;
	height: auto;
}
.gongNeng_wrapper .item-wrapper{
	width: 100%;
	height: 60rpx;
	padding-left: 40rpx;
	box-sizing: border-box;
	background-color: #fff;
}
.item-wrapper .item_image{
	width: 54rpx;
	height: 40rpx;
	display: inline-block;
	vertical-align: top;
	margin-top: 10rpx;
}
.item_image image{
	width: 100%;
	height: 100%;
	vertical-align: top;
}
.item-wrapper .text{
	display: inline-block;
	vertical-align: top;
	width: auto;
	height: 40rpx;
	color: rgb(179,179,179);
	margin-left: 20rpx;
	margin-top: 10rpx;
	line-height: 40rpx;
	text-align: center;
}
.item-wrapper .nowPlay{
	display: inline-block;
	vertical-align: top;
	width: auto;
	height: 40rpx;
	margin-left: 50%;
	margin-top: 10rpx;
	line-height: 40rpx;
	text-align: center;
	color: rgb(227,78,99);
}
.copy{
	width: 100%;
	height: 40rpx;
	line-height: 40rpx;
	text-align: center;
}