.wuzhe {
    width: 100%;
    height: auto;
    background-color: #f5f5f5;
}

.header {
    width: 100%;
    height: auto;
    background-color: #fff;
}

.header .top {
    position: relative;
    width: 100%;
    height: 360rpx;
    border-radius: 20rpx 20rpx 0rpx 0rpx;
    background-color: #000 !important;
    margin-top: 2%;
}

.top .img {
    position: absolute;
    width: 200rpx;
    height: 186rpx;
    top: 50%;
    transform: translate(0, -50%);
    left: 7%;
}

.img image {
    width: 100%;
    height: 100%;
    vertical-align: top;
}

.noKa {
    position: absolute;
    bottom: 20rpx;
    left: 30rpx;
    color: #fff;
}

.bianhao {
    position: absolute;
    top: 20rpx;
    right: 30rpx;
    color: #C7C7C7;
}

.toOpen {
    position: absolute;
    border: 2rpx solid #F9BE02;
    padding: 8rpx;
    color: #F9BE02;
    right: 3%;
    bottom: 8%;
    border-radius: 4rpx;
    max-width: 200rpx;
}

.fiveCar_Explain {
    border-top: 2rpx solid #F2F2F2;
    height: auto;
    background-color: #FFFFFF;
    border-bottom: 2rpx solid #f2f2f2;
}

.fiveCar_Explain .liyi {
    line-height: 60rpx !important;
    padding-left: 8rpx;
    font-size: 28rpx;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    color: #666;
}

.desc {
    width: 100%;
    display: block;
    height: auto;
    margin-top: 0;
    padding: 0;
    color: #666;
    padding-bottom: 10rpx;
    box-sizing: border-box;
}

.buyWays {
    width: 100%;
    height: 80rpx;
    display: flex;
    border-bottom: 4rpx solid #efefef;
    background-color: #fff;
}

.buyWays .way_itme {
    flex: 1;
    height: 80rpx;
    color: rgb(136, 136, 136);
    line-height: 80rpx;
    text-align: center;
}

.way_itme.active {
    color: #E34E63;
    border-bottom: 4rpx solid #E34E63;
}

.content {
    height: auto;
    width: 100%;
    position: relative;
}

.content .typeItem {
    background-color: #FFFFFF;
    height: 100rpx;
    border-bottom: 2rpx solid #F2F2F2;
}

.typeItem .radio_p {
    position: relative;
    width: 300rpx;
    height: 100rpx;
    display: inline-block;
    margin-right: 40rpx;
    margin-left: 10rpx;
    font-size: 28rpx;
    line-height: 100rpx;
    float: left;
}

.radio_p .NoSelect {
    position: absolute;
    width: 30rpx;
    height: 30rpx;
    top: 30rpx;
    left: 20rpx;
    border: 4rpx solid #E34F63;
    border-radius: 50%;
}

.radio_p .radio_span {
    position: absolute;
    top: 0rpx;
    left: 80rpx;
    color: #666;
}

.save {
    line-height: 100rpx;
    color: #E34F63;
    text-align: right;
    padding-right: 5px;
    margin-top: 0rpx;
    font-size: 32rpx;
}