.header {
    position: relative;
    width: 100%;
    height: 300rpx;
    background-color: #ff6d3e;
}

.header .avatar {
    position: absolute;
    top: 10%;
    left: 50%;
    transform: translate(-50%, 0);
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%;
    border: 2rpx solid #ffc7b5;
}

.avatar image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    vertical-align: top;
}

.header .kuang {
    width: 150rpx;
    height: 150rpx;
    position: absolute;
    top: 35.5rpx;
    left: 50%;
    transform: translate(-50%, 0);
    border: 2rpx solid #efefef;
}

.header .nickName {
    position: absolute;
    width: 800%;
    height: 60rpx;
    line-height: 60rpx;
    border: 2rpx solid #fff;
    top: 210rpx;
    left: 50%;
    transform: translate(-50%, 0);
}

.tabbarBtn {
    width: 100%;
    height: 92rpx;
    box-sizing: border-box;
}

.tabbarBtn .btnItem {
    width: 33.33%;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    color: #808080;
    display: inline-block;
    vertical-align: top;
}

.btnItem.active {
    color: #ff6d3e!important;
    border-bottom: 2px solid #ff6d3e;
}
.content{
	width: 100%;
	height: auto;
	background-color: #fff;
}