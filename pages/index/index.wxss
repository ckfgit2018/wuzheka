.home {
    width: 100%;
    height: auto;
    padding-bottom: 100rpx;
    box-sizing: border-box;
}

.top {
    width: 100%;
    height: 75rpx;
    padding-top: 0.1rpx;
    box-sizing: border-box;
}

.top .inputSearch {
    width: 355rpx;
    height: 50rpx;
    margin: 0 auto;
    margin-top: 10rpx;
    border-radius: 8rpx;
    background-color: #fff;
    box-sizing: border-box;
}

.inputSearch input {
    width: 100%;
    height: 50rpx;
    border-radius: 8rpx;
    vertical-align: top;
    font-size: 28rpx;
    line-height: 32rpx;
    text-align: center;
}

.Carous_wrapper {
    width: 100%;
    height: 280rpx;
}

.Carous_wrapper .swiper {
    width: 100%;
    height: 100%;
}

.swiper .swiper-item {
    width: 100%;
    height: 100%;
}

.swiper-item image {
    width: 100%;
    height: 100%;
    vertical-align: top;
}

.menu_wrapper {
    width: 100%;
    height: auto;
    background-color: #fff;
}

.menu_wrapper .menu_item {
    width: 25%;
    height: auto;
    margin: 10rpx 0;
    display: inline-block;
    vertical-align: top;
}

.menu_item .menu_img {
    width: 80rpx;
    height: 80rpx;
    margin: 10rpx auto;
}

.menu_img image {
    width: 100%;
    height: 100%;
    vertical-align: top;
}

.messList_wrapper {
    width: 100%;
    height: 50rpx;
    display: flex;
    border-top: 2rpx solid rgb(247, 246, 247);
    background-color: #fff;
}

.mess_title {
    position: relative;
    padding-left: 80rpx;
    flex: 0 0 35%;
    width: 35%;
    height: 50rpx;
    color: #EA7886;
    line-height: 50rpx;
    border-right: 2rpx solid rgb(247, 246, 247);
    box-sizing: border-box;
}

.mess_title .mess_icon {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    top: 7rpx;
    left: 20rpx;
}

.mess_icon image {
    width: 100%;
    height: 100%;
    vertical-align: top;
}

.list_item {
    flex: 1;
    height: 50rpx;
}

.list_item .swiper {
    width: 100%;
    height: 50rpx;
}

.swiper .swiper-item {
    width: 100%;
    height: 50rpx;
    line-height: 50rpx;
    color: rgb(163, 163, 163);
    font-size: 24rpx;
    box-sizing: border-box;
}

.content_wrapper {
    width: 100%;
    height: 272rpx;
    margin: 20rpx 0rpx;
    display: flex;
}

.content_top_left {
    flex: 0 0 45%;
    height: 100%;
    border-right: 2rpx solid #efefef;
    background-color: #fff;
}

.content_top_left .title {
    font-size: 1.32rem!important;
    font-weight: 700;
    color: #F34915!important;
    text-align: center;
}

.content_top_left .timeWrapper {
    width: 240rpx;
    height: 40rpx;
    margin: 10rpx auto;
}

.timeWrapper .common {
    position: relative;
    width: 45rpx;
    height: 32rpx;
    display: inline-block;
    vertical-align: top;
    margin: 0rpx 10rpx;
    text-align: center;
    background-color: rgba(0, 0, 0, .6);
    line-height: 32rpx;
    border-radius: 4rpx;
    color: #fff;
    font-size: 24rpx;
}

.icon {
    position: absolute;
    top: 7rpx;
    left: 48rpx;
    width: 10rpx;
    height: 20rpx;
    font-size: 28rpx;
    line-height: 20rpx;
    color: rgba(0, 0, 0, .6);
    text-align: center;
}

.food_img {
    width: 80%;
    height: 100rpx;
    margin: 0 auto;
}

.food_img image {
    width: 100%;
    height: 100%;
    vertical-align: top;
}

.text {
    color: rgb(163, 163, 163);
    text-align: center;
    margin-top: 10rpx;
}

.content_top_right {
    flex: 1;
    height: 100%;
}

.content_top_right .content_item {
    position: relative;
    width: 100%;
    height: 50%;
    border-bottom: 2rpx solid #efefef;
    padding-left: 20rpx;
    box-sizing: border-box;
    background-color: #fff;
}

.content_item:last-child {
    border-bottom: 0rpx;
}

.content_item .titleName {
    font-size: 40rpx!important;
    font-weight: 700!important;
    line-height: 68rpx;
    color: #7CC2FE;
}

.content_item .textValue {
    color: rgb(163, 163, 163);
    font-size: 24rpx;
    width: 60%;
    height: 40rpx;
    margin-top: 14rpx;
    line-height: 40rpx;
    overflow: hidden;
    white-space: nowrap;
}

.itemImage {
    position: absolute;
    top: 26rpx;
    right: 10rpx;
    width: 80rpx;
    height: 80rpx;
}

.itemImage image {
    width: 100%;
    height: 100%;
    vertical-align: top;
}

.discount_wrapper {
    width: 100%;
    height: auto;
    margin-bottom: 20rpx;
}

.discount_title {
    width: 100%;
    height: 60rpx;
    margin-bottom: 10rpx;
    background-color: #fff;
    position: relative;
}

.discount_title .icon {
    width: 45rpx;
    height: 40rpx;
    position: absolute;
    top: 10rpx;
    left: 10rpx;
}

.icon image {
    width: 100%;
    height: 100%;
    vertical-align: top;
}

.discount_text {
    position: absolute;
    top: 10rpx;
    left: 80rpx;
    width: 150rpx;
    height: 40rpx;
    color: #E34F63;
    line-height: 40rpx;
    text-align: center;
}

.more {
    position: absolute;
    width: auto;
    height: 40rpx;
    line-height: 40rpx;
    color: #808080;
    top: 10rpx;
    right: 40rpx;
}

.more .moreImage {
    position: absolute;
    top: 0rpx;
    right: -29rpx;
    width: 22rpx;
    height: 38rpx;
}

.moreImage image {
    width: 100%;
    height: 100%;
    vertical-align: top;
}

.discount_content {
    width: 100%;
    height: auto;
    padding: 0 20rpx;
    padding-top: 20rpx;
    padding-bottom: 40rpx;
    background-color: #fff;
    box-sizing: border-box;
}

.discount_content .discount_item {
    width: 30%;
    height: 100%;
    display: inline-block;
    vertical-align: top;
}

.discount_item.two {
    margin: 0 34rpx;
}

.discount_item .item_img {
    width: 200rpx;
    height: 160rpx;
    margin: 0 auto;
}

.item_img image {
    width: 100%;
    height: 100%;
    vertical-align: top;
}

.discount_item .text {
    color: #080808;
}

.storeWrapper {
    width: 100%;
    height: auto;
    background-color: #fff;
}

.storeWrapper .discount_title {
    margin-bottom: 0rpx;
    border-bottom: 2rpx solid #efefef;
}

.store_content {
    width: 100%;
    height: auto;
    background-color: #fff;
}

.store_content .store_item {
    width: 100%;
    height: auto;
    display: flex;
    padding: 20rpx 12rpx;
    border-bottom: 2rpx solid #f2f2f2;
    box-sizing: border-box;
}
.store_item:last-child{
	border-bottom: 0rpx;
}
.store_item .store_img {
    flex: 0 0 35%;
    width: 35%;
    height: 160rpx;
}

.store_img image {
    width: 100%;
    height: 100%;
    vertical-align: top;
}

.store_item .storeInfo {
    flex: 1;
    height: 100%;
    padding-left: 12rpx;
    box-sizing: border-box;
}

.storeInfo .text_title {
    overflow: hidden!important;
    white-space: nowrap!important;
    text-overflow: ellipsis!important;
    color: #080808;
}

.storeInfo .text_flow {
    height: 60rpx!important;
    line-height: 60rpx!important;
    color: #808080;
    margin: 13rpx 0rpx;
}
.storeInfo .follow{
	color: #808080;
	box-sizing: border-box;
}