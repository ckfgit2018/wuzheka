.contentWrapper {
    background-color: #fff;
    width: 100%;
    height: auto;
    margin-top: 16rpx;
    padding-left: 8rpx;
    box-sizing: border-box;
}

.contentWrapper .itemList {
    position: relative;
    height: 100rpx;
    border-bottom: 2rpx solid #F2F2F2;
    display: flex;
}

.itemList .name {
    height: 52rpx;
    flex: 0 0 16%;
    width: 16%;
    font-size: 32rpx;
    border-right: 4rpx solid #F2F2F2;
    color: #808080;
    margin-top: 26rpx;
    display: inline-block;
    text-align: right;
    padding-right: 10rpx;
    box-sizing: border-box;
    line-height: 50rpx;
}

.itemList .input {
    flex: 1;
    height: 60rpx;
    color: #808080;
    margin-left: 12rpx;
    box-sizing: border-box;
    font-size: 28rpx;
    margin-top: 22rpx;
}
.input input{
	width: 100%;
	height: 100%;
	vertical-align: top;
}
.radio_group{
	position: absolute;
	top: 20rpx;
	right: 0rpx;
	width: 60%;
	height: 60rpx;
	display: flex;
}
.radio_group .label{
	flex: 1;
	height: 100%;
	display: inline-block;
	vertical-align: top;
	white-space: nowrap;
}
.label .radio{
	width: 30rpx;
	height: 30rpx;
	border-radius: 50%;
	border: 2rpx solid red;
}

