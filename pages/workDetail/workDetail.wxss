.workDetail {
    width: 100%;
    height: auto;
    background-color: #f5f5f5;
}

.workDetail .top {
    position: relative;
    width: 100%;
    height: 100rpx;
    background-color: #2ebba9;
}

.top .title {
    text-align: center;
    line-height: 100rpx;
    color: #fff;
}

.top .back {
    width: 40rpx;
    height: 60rpx;
    position: absolute;
    top: 20rpx;
    background-color: #fff;
    left: 20rpx;
}

.back image {
    width: 100%;
    height: 100%;
    vertical-align: top;
}

.jobshow {
    position: relative;
    background-color: #FFFFFF;
    padding: 20rpx;
}

.jobnum,
.jobtitle {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    margin-top: 10rpx;
    color: #666;
}

.jobName {
    width: 100%;
    height: 60rpx;
}

.jobtitle {
    font-size: 36rpx;
    margin-top: 4rpx;
}

.jobnum {
    font-size: 28rpx;
}

.salary {
    color: #FF6600;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 28rpx;
}

.telephone {
    color: #666;
    font-size: 28rpx;
}

.time {
    position: absolute;
    top: 140rpx;
    right: 30rpx;
    font-size: 28rpx;
    color: #FF3300;
}

.jobshowwadder {
    background-color: #FFFFFF;
    padding: 30rpx 30rpx;
    border-top: 2rpx #F2F2F2 solid;
    color: #666;
    font-size: 28rpx;
}

.link_gray {
    width: 100%;
    height: 60rpx;
}

.link_gray .icon {
    width: 30rpx;
    height: 40rpx;
    margin-top: 10rpx;
    display: inline-block;
    vertical-align: top;
}

.icon image {
    width: 100%;
    height: 100%;
    vertical-align: top;
}

.address {
    display: inline-block;
    vertical-align: top;
    line-height: 60rpx;
    margin-left: 20rpx;
}

.bgLine {
    width: 100%;
    height: 30rpx;
    background: transparent;
}

.jobshowtag {
    background-color: #FFFFFF;
    padding: 36rpx 0;
}

.jobshowtag .tagList {
    width: 90%;
    margin: 0 auto;
}

.tagList .tabItem {
    border-radius: 20rpx;
    margin-right: 20rpx;
    display: inline-block;
    vertical-align: top;
    padding: 6rpx 4rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    font-size: 28rpx;
    box-sizing: border-box;
    margin-top: 5rpx;
}

.tabItem.tag1 {
    background: #daf2fe;
    color: #30a2c8;
}

.tabItem.tag2 {
    background: #fef5da;
    color: #ea994e;
}

.tabItem.tag3 {
    background: #e4fcdc;
    color: #76af58;
}

.tabItem.tag4 {
    background: #ebebeb;
    color: #868686;
}

.jobshowdesc {
    position: relative;
    width: 100%;
    height: auto;
    background-color: #fff;
}

.descTitle,
.jobshowImg {
    border-bottom: 2rpx #F2F2F2 solid;
    padding-left: 80rpx;
    font-weight: 600;
    height: 132rpx;
    line-height: 132rpx;
    font-size: 32rpx;
    background-repeat: no-repeat;
    background-size: 36rpx 36rpx;
    background-position: 30rpx center;
    color: #666;
}

.descTitle {
    background-image: url(http://qiye.dejiplaza.com/we10/addons/enjoy_dz/public/images/125.png);
}

.jobshowImg {
    background-image: url(http://qiye.dejiplaza.com/we10/addons/enjoy_dz/public/images/124.png);
}

.jobshowdesc .text {
    padding: 20rpx 30rpx;
    line-height: 165%;
    font-size: 32rpx;
    color: #999999;
    word-break: break-all;
}

.prompt {
    position: absolute;
    top: 50rpx;
    right: 25rpx;
    color: #666;
}

.imgContent {
    width: 100%;
    height: auto;
    padding: 20rpx 2%;
    box-sizing: border-box;
    background-color: #fff;
}

.imgContent .imgItem {
    width: 28%;
    height: 320rpx;
    display: inline-block;
    vertical-align: top;
    margin-left: 2.7%;
    margin-right: 2.5%;
    margin-top: 10rpx;
}
.imgItem image{
	width: 100%;
	height: 100%;
	vertical-align: top;
}